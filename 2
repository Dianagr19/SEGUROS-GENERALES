Sub ejemplo()

Range("b10").Value = "Informe de siniestros"
Range("b11").Value = "Informe para el año 2016"

tarifa = " Tarifa e " & Range("b11").Value
Range("b12").Value = tarifa
Range("b10").Borders.Color = RGB(68, 172, 204)
Range("b11").Interior.Color = RGB(68, 150, 1120)
Range("b12").Select
Selection.Font.Bold = True '.Bold para margen
Selection.Font.Italic = True
Selection.Font.Name = "Century Gothic"
Selection.Font.Size = 24   'todo lo de fuente inicia con .Font


End Sub

